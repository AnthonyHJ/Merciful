{
  "name": "Merciful Client",
  "short_name": "Merciful",
  "version": "0.4.9.7",
  "version_name": "0.4.9.7 - UI tweaks",
  "description": "A less-zealous client for Skotos-Tech games",
  
  "icons": {
    "16": "images/Merciful_16.png",
    "32": "images/Merciful_32.png",
    "48": "images/Merciful_48.png",
    "128": "images/Merciful_128.png"
  },
  
  "action": {
    "default_title": "Merciful Client",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Merciful_16.png",
      "32": "images/Merciful_32.png",
      "48": "images/Merciful_48.png",
      "128": "images/Merciful_128.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
          "*://*.marrach.com/*",
          "*://*.multirev.net/*",
          "*://*.allegoryofempires.com/*",
          "*://*.lazarus-project.net/*"
        ]
    },
  "options_page": "options.html",
  "permissions": [
            "alarms", 
            "cookies", 
            "downloads", 
            "scripting", 
            "storage", 
            "webNavigation"
            ],
  "host_permissions": [
            "*://*.marrach.com/*",
            "*://*.multirev.net/*",
            "*://*.allegoryofempires.com/*",
            "*://*.lazarus-project.net/*"
            ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'"
    },
    
  "browser_specific_settings": {
    "gecko": {
      "id": "apps@freyas8.co.uk"
    }
  },

    
  "manifest_version": 3
}
